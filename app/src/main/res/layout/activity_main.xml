<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@color/colorPrimaryDark"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorAccent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_pexels"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/txvLoginAs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Masuk sebagai"
                    android:textColor="@color/colorwhite"
                    android:textSize="8sp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/txvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/txvLoginAs"
                    android:drawableStart="@drawable/ic_view_person"
                    android:drawablePadding="5dp"
                    tools:text="Diyas"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_view_person" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Yuk, kita lakukan \nyang terbaik hari ini!"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/crvTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_credit_card_black_24dp"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="Transaksi"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_credit_card_black_24dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="34dp"
                        android:paddingBottom="14dp"
                        android:text="Histori Transaksi | Buat Transaksi Baru"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:paddingLeft="34dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crvAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_card_agent"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="Agen"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_card_agent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="34dp"
                        android:paddingBottom="14dp"
                        android:text="Daftar Agen | Edit Agen | Tambah Agen Baru"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:paddingLeft="34dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crvUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_card_user"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="Profil"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_card_user" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="34dp"
                        android:paddingBottom="14dp"
                        android:text="Lihat Profil Saya"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:paddingLeft="34dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:text="Point of sales versi 1.0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimary"
        android:text="Masuk"
        />

</RelativeLayout>